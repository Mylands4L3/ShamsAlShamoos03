@page "/"

<MudContainer Class="mt-12">

    <!-- Hero Section -->
    <MudPaper Class="pa-8 text-center" Elevation="4">
        <MudText Typo="Typo.h3" GutterBottom="true">
            به سامانه شمس الشموس خوش آمدید
        </MudText>

        <MudText Typo="Typo.subtitle1" Class="mb-6">
            سیستم مدیریت و ثبت اطلاعات سازمانی
        </MudText>

        <MudButton Variant="Variant.Filled" 
                   Color="Color.Primary" 
                   Size="Size.Large">
            ورود به سیستم
        </MudButton>
    </MudPaper>

    <!-- Features Section -->
    <MudGrid Class="mt-10">

        <MudItem xs="12" md="4">
            <MudPaper Class="pa-6 text-center">
                <MudText Typo="Typo.h6">مدیریت کاربران</MudText>
                <MudText>ثبت و مدیریت اطلاعات کاربران سیستم</MudText>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" md="4">
            <MudPaper Class="pa-6 text-center">
                <MudText Typo="Typo.h6">گزارش‌گیری</MudText>
                <MudText>نمایش گزارش‌های دقیق و کاربردی</MudText>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" md="4">
            <MudPaper Class="pa-6 text-center">
                <MudText Typo="Typo.h6">امنیت بالا</MudText>
                <MudText>احراز هویت و دسترسی سطح‌بندی شده</MudText>
            </MudPaper>
        </MudItem>

    </MudGrid>

</MudContainer>