@page "/"
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Cards
@using Syncfusion.Blazor.Navigations

 
<div dir="rtl">

    <!-- Hero Section -->
    <div class="container text-center my-5">
        <SfCard CssClass="e-shadow e-round">
            <CardHeader>
                <h1>خوش آمدید به شمس الشموس</h1>
                <p>Landing Page حرفه‌ای با Syncfusion Blazor</p>
            </CardHeader>
            <CardContent>
                <SfButton CssClass="e-primary e-flat" OnClick="()=>GoToFeatures()">شروع کنید</SfButton>
            </CardContent>
        </SfCard>
    </div>

    <!-- Features Section -->
    <div class="container my-5">
        <div class="row text-center">
            <div class="col-md-4 mb-3">
                <SfCard>
                    <CardHeader>
                        <h5>ویژگی اول</h5>
                    </CardHeader>
                    <CardContent>
                        توضیح کوتاه ویژگی اول
                    </CardContent>
                </SfCard>
            </div>
            <div class="col-md-4 mb-3">
                <SfCard>
                    <CardHeader>
                        <h5>ویژگی دوم</h5>
                    </CardHeader>
                    <CardContent>
                        توضیح کوتاه ویژگی دوم
                    </CardContent>
                </SfCard>
            </div>
            <div class="col-md-4 mb-3">
                <SfCard>
                    <CardHeader>
                        <h5>ویژگی سوم</h5>
                    </CardHeader>
                    <CardContent>
                        توضیح کوتاه ویژگی سوم
                    </CardContent>
                </SfCard>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="container text-center my-5">
        <SfButton CssClass="e-success e-flat" OnClick="()=>GoToSignup()">ثبت نام کنید</SfButton>
    </div>

</div>
 
@code {
    void GoToFeatures()
    {
        // مثال: اسکرول یا ناوبری به بخش Features
    }

    void GoToSignup()
    {
        // مثال: ناوبری به صفحه ثبت نام
        NavigationManager.NavigateTo("/signup");
    }

    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;
}